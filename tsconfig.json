{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "checkJs": true,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@styles": [
                "src/app/styles"
            ]
        },
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },

    "include": [
        "src",
        "vite-env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
